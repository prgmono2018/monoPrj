{
    "env": {
        "node": true,
        "browser": true,
        "es6": true,
        "commonjs":true
    },
    "extends":  [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "parser": "babel-eslint",
        "ecmaFeatures": {
            "jsx": true,
            "experimentalObjectRestSpread": true,
            "modules": true
        },
        "ecmaVersion": 2018,
    
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "comma-dangle": 0,
        "react/jsx-uses-vars": 1,
        "react/display-name": 1,
        "no-unused-vars": "warn",
         "no-console": 1,
        "no-unexpected-multiline": "warn",
        "react/react-in-jsx-scope": 0,
        "no-undef":0 //Here we need to ignore this
    }
